<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Shiemi.Resources.StyleSheet.StyleSheet"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  cards  -->
    <Style
        x:Key="CardBorderStyle"
        TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
    </Style>

    <Style
        x:Key="ImageCardBorderStyle"
        TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="StrokeShape" Value="RoundRectangle 4" />
    </Style>

    <!--  labels  -->
    <Style
        x:Key="TitleLabel"
        TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="PoppinsBold" />
    </Style>

    <Style
        x:Key="SubTitleLabel"
        TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="PoppinsRegular" />
        <Setter Property="TextColor" Value="LightGrey" />
    </Style>

    <!--  seperator  -->
    <Style
        x:Key="VerticalSeperator"
        TargetType="BoxView">
        <Setter Property="WidthRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="LightGrey" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!--  btns and icons  -->
    <Style
        x:Key="PrimaryBtnStyle"
        TargetType="Button">
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup
                    x:Name="CommonStates">
                    <VisualState
                        x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                            <Setter Property="TextColor" Value="White" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState
                        x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#7a56cc" />
                            <Setter Property="TextColor" Value="White" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style
        x:Key="SecondaryBtnStyle"
        TargetType="Button">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="ImageSource" Value="ic_fluent_arrow_left_28_regular.png" />

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup
                    x:Name="CommonStates">
                    <VisualState
                        x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="White" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState
                        x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="LightGrey" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style
        x:Key="IconStyle"
        TargetType="Button">
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup
                    x:Name="CommonStates">
                    <VisualState
                        x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="White" />
                            <Setter Property="TextColor" Value="Black" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState
                        x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="LightGrey" />
                            <Setter Property="TextColor" Value="Black" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style
        x:Key="WarningIconStyle"
        TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup
                    x:Name="CommonStates">
                    <VisualState
                        x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BorderColor" Value="White" />
                            <Setter Property="BorderWidth" Value="1" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState
                        x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BorderColor" Value="LightGrey" />
                            <Setter Property="BorderWidth" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style
        x:Key="ImageIconBtnStyle"
        TargetType="ImageButton">
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup
                    x:Name="CommonStates">
                    <VisualState
                        x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="White" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState
                        x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="LightGrey" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
</ResourceDictionary>