<?xml version="1.0" encoding="utf-8"?>

<CollectionView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                x:Name="GalleryCollectionView"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:viewmodels="clr-namespace:Shiemi.ViewModels"
                HorizontalScrollBarVisibility="Never"
                xmlns:homeviews="clr-namespace:Shiemi.Views.HomeViews"
                x:DataType="homeviews:GalleryView"
                x:Class="Shiemi.Views.HomeViews.GalleryView">
    <CollectionView.ItemTemplate>
        <DataTemplate x:DataType="viewmodels:GalleryViewModel">
            <Border
                Style="{StaticResource CardBorderStyle}"
                BackgroundColor="LightBlue"
                WidthRequest="300">
                <VerticalStackLayout Spacing="8">
                    <Label
                        Text="{Binding CoverTitle}"
                        MaxLines="2"
                        FontSize="18"/>

                    <Label
                        Text="{Binding CoverBlurb}"
                        VerticalOptions="End"
                        FontSize="14"
                        MaxLines="3"
                        TextColor="Gray"
                        LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>
        </DataTemplate>
    </CollectionView.ItemTemplate>

    <CollectionView.ItemsLayout>
        <LinearItemsLayout Orientation="Horizontal"
                           ItemSpacing="8"/>
    </CollectionView.ItemsLayout>

    <CollectionView.EmptyView>
        <Label Text="Soo empty!"
               TextColor="LightGray"
               FontSize="24"/>
    </CollectionView.EmptyView>
</CollectionView>