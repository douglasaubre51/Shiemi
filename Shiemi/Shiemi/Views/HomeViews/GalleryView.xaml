<?xml version="1.0" encoding="utf-8" ?>

<CollectionView
    x:Class="Shiemi.Views.HomeViews.GalleryView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:homeviews="clr-namespace:Shiemi.Views.HomeViews"
    xmlns:viewmodels="clr-namespace:Shiemi.ViewModels"
    x:Name="GalleryCollectionView"
    x:DataType="homeviews:GalleryView"
    HorizontalScrollBarVisibility="Never">
    <CollectionView.ItemTemplate>
        <DataTemplate x:DataType="viewmodels:GalleryViewModel">
            <Border
                BackgroundColor="LightBlue"
                Style="{StaticResource CardBorderStyle}"
                WidthRequest="300">
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontSize="18"
                        MaxLines="2"
                        Text="{Binding CoverTitle}" />

                    <Label
                        FontSize="14"
                        LineBreakMode="WordWrap"
                        MaxLines="3"
                        Text="{Binding CoverBlurb}"
                        TextColor="Gray"
                        VerticalOptions="End" />
                </VerticalStackLayout>
            </Border>
        </DataTemplate>
    </CollectionView.ItemTemplate>

    <CollectionView.ItemsLayout>
        <LinearItemsLayout ItemSpacing="8" Orientation="Horizontal" />
    </CollectionView.ItemsLayout>

    <CollectionView.EmptyView>
        <Label
            FontSize="24"
            Text="Soo empty!"
            TextColor="LightGray" />
    </CollectionView.EmptyView>
</CollectionView>