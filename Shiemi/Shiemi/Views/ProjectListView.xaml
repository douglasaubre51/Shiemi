<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout
    x:Class="Shiemi.Views.ProjectListView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:projectsdtos="clr-namespace:Shiemi.Dtos.ProjectsDtos">
    <CollectionView
        x:Name="ProjectCollectionView"
        ItemsLayout="VerticalList"
        SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="projectsdtos:ProjectDto">
                <Grid ColumnDefinitions="100,*" RowDefinitions="*,*">
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="{Binding Title}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</VerticalStackLayout>
