<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout
    x:Class="Shiemi.Views.ProjectListView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:type="clr-namespace:Shiemi.Views"
    xmlns:viewmodels="clr-namespace:Shiemi.ViewModels"
    x:DataType="type:ProjectListView">

    <CollectionView
        x:Name="ProjectCollectionView"
        ItemsLayout="VerticalList"
        ItemsSource="{Binding ProjectCollection}"
        SelectionChanged="ProjectCollectionView_SelectionChanged"
        SelectionMode="Single">

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodels:ChatListProjectViewModel">
                <Grid
                    ColumnDefinitions="*"
                    RowDefinitions="*,*"
                    RowSpacing="20">
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="20,20,0,0"
                        Text="{Binding Title}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</VerticalStackLayout>
