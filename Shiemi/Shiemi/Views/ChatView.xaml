<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="Shiemi.Views.ChatView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:messagedtos="clr-namespace:Shiemi.Dtos.MessageDtos"
    xmlns:views="clr-namespace:Shiemi.Views"
    Margin="0,0,10,10"
    BackgroundColor="LightBlue"
    ColumnDefinitions="*"
    RowDefinitions="50,*,60">

    <!--  header  -->
    <VerticalStackLayout Grid.Row="0" BackgroundColor="White">
        <Label x:Name="SenderLabel" Margin="20" />
    </VerticalStackLayout>

    <!--  body  -->
    <CollectionView
        x:Name="MessageCollectionView"
        Grid.Row="1"
        ItemsLayout="VerticalList"
        ItemsUpdatingScrollMode="KeepLastItemInView">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="messagedtos:MessageDto">
                <views:ChatCardView MessageText="{Binding Text}" MessageTime="{Binding CreatedAt}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

    <!--  send chat area  -->
    <Grid
        Grid.Row="2"
        Margin="10,0,10,0"
        ColumnDefinitions="*,80"
        ColumnSpacing="10">
        <Editor
            x:Name="MessageBox"
            Grid.Column="0"
            BackgroundColor="White" />
        <Button
            Grid.Column="1"
            Clicked="Send_Btn_Clicked"
            Text="send" />
    </Grid>
</Grid>
