<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Shiemi.Views.ChatCardView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout
        Margin="10"
        Padding="10"
        Background="White">

        <!--  main  -->
        <Label
            x:Name="MessageTextLabel"
            FontSize="16"
            HorizontalOptions="End" />

        <!--  footer  -->
        <VerticalStackLayout HorizontalOptions="End">
            <Label
                x:Name="MessageTimeLabel"
                FontSize="Caption"
                TextColor="Grey" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentView>
