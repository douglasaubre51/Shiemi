<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shiemi.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:chatpages="clr-namespace:Shiemi.Pages.Chats"
    xmlns:pages="clr-namespace:Shiemi.Pages"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="GetStarted" FlyoutItemIsVisible="False">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:Index}" Route="Index" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:Profile}" Route="Profile" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="My Projects">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:Projects}" Route="Projects" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Project Shop">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:ProjectShop}" Route="ProjectShop" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Chats">
        <Tab Title="Rooms">
            <ShellContent ContentTemplate="{DataTemplate chatpages:Rooms}" Route="Rooms" />
        </Tab>
        <Tab Title="Channels">
            <ShellContent ContentTemplate="{DataTemplate chatpages:Channels}" Route="Channels" />
        </Tab>
    </FlyoutItem>


</Shell>
