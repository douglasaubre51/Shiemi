<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.Profile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pagemodel="clr-namespace:Shiemi.PageModels"
    Title="{Binding Title}"
    x:DataType="pagemodel:ProfilePageModel">

    <VerticalStackLayout Margin="10" Spacing="20">

        <Label
            FontSize="40"
            HorizontalOptions="Start"
            Text="welcome"
            VerticalOptions="Start" />

        <Label
            FontSize="30"
            HorizontalOptions="Start"
            Text="{Binding UserName}"
            VerticalOptions="Start" />

        <Label
            FontSize="20"
            HorizontalOptions="Start"
            Text="{Binding Email}"
            VerticalOptions="Start" />

        <Label
            FontSize="10"
            HorizontalOptions="Start"
            Text="{Binding UserId}"
            VerticalOptions="Start" />

    </VerticalStackLayout>
</ContentPage>
