<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.Chats.Channels"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:chatmodel="clr-namespace:Shiemi.PageModels.Chat"
    xmlns:views="clr-namespace:Shiemi.Views"
    x:DataType="chatmodel:ChannelsPageModel"
    Shell.FlyoutBehavior="Disabled">

    <Grid ColumnDefinitions="*,1.8*">

        <!--  chat list  -->
        <views:ProjectListView Grid.Column="0"
                ProjectCollection="{Binding ProjectCollection}"/>

        <!--  chat area  -->
        <views:ChannelMessageView Grid.Column="1"
                MessageCollection="{Binding MessageCollection}"/>

    </Grid>
</ContentPage>