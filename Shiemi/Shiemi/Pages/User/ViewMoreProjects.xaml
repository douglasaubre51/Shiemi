<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:userpagemodels="clr-namespace:Shiemi.PageModels.User"
             x:DataType="userpagemodels:ViewMoreProjectsPageModel"
             xmlns:viewmodels="clr-namespace:Shiemi.ViewModels"
             Shell.TabBarIsVisible="False"
             x:Class="Shiemi.Pages.User.ViewMoreProjects"
             Title="More Projects">
    <CollectionView
        Margin="8,0,0,0"
        HorizontalScrollBarVisibility="Never"
        ItemsSource="{Binding ProjectCollection}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodels:GalleryViewModel">
                <Border
                    Style="{StaticResource CardBorderStyle}"
                    BackgroundColor="LightBlue"
                    MinimumHeightRequest="160"
                    MinimumWidthRequest="200">
                    <VerticalStackLayout Spacing="8">
                        <Label
                            Text="{Binding CoverTitle}"
                            MaxLines="2"
                            LineBreakMode="WordWrap"
                            FontSize="18"/>

                        <Label
                            Text="{Binding CoverBlurb}"
                            VerticalOptions="End"
                            FontSize="14"
                            MaxLines="3"
                            TextColor="Gray"
                            LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical"
                             Span="3"
                             HorizontalItemSpacing="4"
                             VerticalItemSpacing="4"/>
        </CollectionView.ItemsLayout>

        <CollectionView.EmptyView>
            <Label Text="Soo empty!"
                   TextColor="LightGray"
                   FontSize="24"/>
        </CollectionView.EmptyView>
    </CollectionView>
</ContentPage>