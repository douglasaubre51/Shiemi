<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:homeviews="clr-namespace:Shiemi.Views.HomeViews"
             Title="Home"
             xmlns:userpagemodels="clr-namespace:Shiemi.PageModels.User"
             x:DataType="userpagemodels:HomePageModel"
             Shell.NavBarIsVisible="True"
             x:Class="Shiemi.Pages.User.Home">
    <VerticalStackLayout Spacing="8" Margin="16">
        <homeviews:GalleryView
            Title="My Projects >"
            Store="{Binding MyProjectCollection }" />

        <homeviews:GalleryView
            Title="Joined Projects >"
            Store="{Binding JoinedProjectCollection}" />
    </VerticalStackLayout>
</ContentPage>