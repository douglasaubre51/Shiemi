<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.User.Profile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pagemodel="clr-namespace:Shiemi.PageModels.User"
    Title="Profile"
    x:DataType="pagemodel:ProfilePageModel"
    BackgroundColor="Lavender"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="True">
    <Grid
        Margin="16"
        ColumnDefinitions="Auto,Auto"
        ColumnSpacing="16">
        <Grid.Resources>
            <Style x:Key="WarningBtnStyle" TargetType="Button">
                <Setter Property="HeightRequest" Value="20" />
                <Setter Property="BorderColor" Value="Red" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="TextColor" Value="Red" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent" />
                                    <Setter Property="TextColor" Value="Red" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Red" />
                                    <Setter Property="TextColor" Value="White" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </Grid.Resources>

        <!--  user details card  -->
        <Border
            Grid.Column="0"
            Padding="20"
            BackgroundColor="White"
            HorizontalOptions="Start"
            VerticalOptions="Start">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="StrokeThickness" Value="0" />
                    <Setter Property="StrokeShape" Value="RoundRectangle 16" />
                </Style>
            </Border.Style>
            <!--  user details  -->
            <Grid RowDefinitions="Auto,Auto,100">
                <Label
                    Grid.Row="0"
                    FontSize="42"
                    Text="{Binding UserName}" />

                <Label
                    Grid.Row="1"
                    FontSize="15"
                    Text="{Binding Email}"
                    TextColor="Grey" />

                <Button
                    Grid.Row="2"
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource WarningBtnStyle}"
                    Text="Logout"
                    VerticalOptions="End" />
            </Grid>
        </Border>

        <!--  dev profile  -->
        <Border
            x:Name="DevProfileCard_NotJoined"
            Grid.Column="1"
            Padding="16"
            BackgroundColor="#ffffff"
            IsVisible="{Binding ShowDevCard_NotJoined}"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 16"
            VerticalOptions="Start">
            <VerticalStackLayout Spacing="16">
                <Label
                    FontSize="24"
                    Text="Dev Profile"
                    TextColor="Grey" />

                <Label Text="Become a dev and get hired !" />

                <Button Command="{Binding MakeDeveloperCommand}" Text="Start now" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
