<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.Dev.Edit"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:devpagemodels="clr-namespace:Shiemi.PageModels.Dev"
    Title="Edit"
    x:DataType="devpagemodels:EditPageModel">
    <Grid
        Margin="20"
        RowDefinitions="Auto,Auto,*"
        RowSpacing="16">
        <VerticalStackLayout Grid.Row="0" Spacing="4">
            <Label Text="ShortDesc" TextColor="Grey" />
            <Editor
                HeightRequest="80"
                Text="{Binding ShortDesc}"
                VerticalOptions="Start" />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" Spacing="8">
            <Label Text="Starting Price" TextColor="Grey" />
            <Entry Text="{Binding StartingPrice}" VerticalOptions="Start" />
        </VerticalStackLayout>

        <Button
            Grid.Row="2"
            Command="{Binding CreateCommand}"
            HorizontalOptions="End"
            Text="continue"
            VerticalOptions="End"
            WidthRequest="150" />
    </Grid>
</ContentPage>