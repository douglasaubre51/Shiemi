<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.Project.CreateProject"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pagemodel="clr-namespace:Shiemi.PageModels.Project"
    Title="Create new Project"
    x:DataType="pagemodel:CreateProjectPageModel"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <ScrollView
        Margin="10"
        Padding="20"
        Orientation="Vertical">
        <Grid RowDefinitions="20,Auto,20,Auto,20,Auto,*" RowSpacing="16">

            <Label Grid.Row="0" Text="Title" />
            <Entry
                Grid.Row="1"
                Text="{Binding ProjectTitle}"
                VerticalOptions="Start" />

            <Label Grid.Row="2" Text="Cover Details" />
            <Editor
                Grid.Row="3"
                HeightRequest="100"
                Text="{Binding ShortDesc}"
                VerticalOptions="Start" />

            <Label Grid.Row="4" Text="Description" />
            <Editor
                Grid.Row="5"
                HeightRequest="400"
                Text="{Binding Description}"
                VerticalOptions="Center" />

            <Button
                Grid.Row="6"
                Command="{Binding CreateCommand}"
                Text="continue" />
        </Grid>

    </ScrollView>
</ContentPage>
