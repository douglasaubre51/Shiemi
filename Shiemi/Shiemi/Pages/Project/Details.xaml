<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.Project.Details"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pagemodel="clr-namespace:Shiemi.PageModels.Project"
    Title="{Binding CurrentProject.Title}"
    x:DataType="pagemodel:DetailsPageModel"
    Shell.FlyoutBehavior="Flyout">
    <ScrollView Margin="10" Orientation="Vertical">
        <VerticalStackLayout Spacing="4">
            <Label
                FontSize="14"
                Text="Description"
                TextColor="Gray" />

            <Label
                FontSize="16"
                LineBreakMode="WordWrap"
                Text="{Binding CurrentProject.Description}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>