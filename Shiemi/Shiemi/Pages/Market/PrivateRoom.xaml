<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.PrivateRoom"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dtos="clr-namespace:Shiemi.Dtos.MessageDtos"
    xmlns:models="clr-namespace:Shiemi.Models"
    xmlns:pagemodel="clr-namespace:Shiemi.PageModels.Market"
    xmlns:views="clr-namespace:Shiemi.Views"
    Title="{Binding Title}"
    x:DataType="pagemodel:PrivateRoomPageModel">
    <Grid ColumnDefinitions="*" ColumnSpacing="10">

        <!--  chats view  -->
        <views:ChatView
            Grid.Row="0"
            Grid.ColumnSpan="2"
            MessageCollection="{Binding MessageCollection}"
            SenderName="{Binding Sender}" />

    </Grid>
</ContentPage>
