<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.Market.PrivateRoom"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Shiemi.Models"
    xmlns:pagemodel="clr-namespace:Shiemi.PageModels.Market"
    xmlns:views="clr-namespace:Shiemi.Views"
    x:DataType="pagemodel:PrivateRoomPageModel"
    Shell.FlyoutBehavior="Flyout">

    <Grid ColumnDefinitions="*" ColumnSpacing="10">

        <!--  chats view  -->
        <views:MessageView
            Grid.Row="0"
            Grid.ColumnSpan="2"
            MessageCollection="{Binding MessageCollection}"
            SenderName="{Binding Sender}" />

    </Grid>
</ContentPage>
