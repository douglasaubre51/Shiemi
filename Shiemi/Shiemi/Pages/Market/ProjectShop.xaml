<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shiemi.Pages.Market.ProjectShop"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pagemodel="clr-namespace:Shiemi.PageModels.Market"
    xmlns:viewmodel="clr-namespace:Shiemi.ViewModels"
    Title="Project market"
    x:DataType="pagemodel:ProjectShopPageModel"
    BackgroundColor="LightBlue"
    Shell.FlyoutBehavior="Flyout">

    <Grid Margin="10" RowDefinitions="*">

        <CollectionView
            ItemSizingStrategy="MeasureAllItems"
            ItemsSource="{Binding ProjectCollection}"
            SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <GridItemsLayout
                    HorizontalItemSpacing="4"
                    Orientation="Vertical"
                    Span="3"
                    VerticalItemSpacing="4" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodel:ProjectViewModel">

                    <Border>
                        <Border.Style>
                            <Style x:Name="CardBorder" TargetType="Border">
                                <Setter Property="Stroke" Value="Transparent" />
                            </Style>
                        </Border.Style>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type pagemodel:ProjectShopPageModel}}, x:DataType=pagemodel:ProjectShopPageModel, Path=GoToProjectDetailsCommand}" CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>

                        <Grid
                            Margin="20"
                            RowSpacing="30"
                            VerticalOptions="Fill">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                FontSize="16"
                                LineBreakMode="WordWrap"
                                Text="{Binding Title}" />

                            <Label
                                Grid.Row="1"
                                FontSize="10"
                                LineBreakMode="WordWrap"
                                Text="{Binding ShortDesc}"
                                TextColor="Gray" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
